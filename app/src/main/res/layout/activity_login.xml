<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99"
    tools:context="com.gabantdev.quizzcofrade.LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="342dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/cabecera2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp" />

    <ImageView
        android:id="@+id/foto_face"
        android:layout_width="188dp"
        android:layout_height="187dp"
        app:srcCompat="@drawable/marcodetalle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.gabantdev.quizzcofrade.Utils.CustomTextView
        android:id="@+id/nombre_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Antonio MacÃ­as"
        android:ellipsize="end"
        android:textSize="30dp"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/foto_face"
        app:layout_constraintLeft_toRightOf="@+id/foto_face"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/foto_face" />

    <ImageView
        android:id="@+id/jugar_img"
        android:layout_width="214dp"
        android:layout_height="182dp"
        app:srcCompat="@drawable/aestaes"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/foto_face"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="296dp"
        tools:layout_editor_absoluteX="45dp"
        android:onClick="click_jugar"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="129dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
        app:layout_constraintTop_toTopOf="@+id/foto_face"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/foto_face"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/foto_face"
        app:layout_constraintBottom_toBottomOf="@+id/foto_face"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="123dp"
        tools:layout_editor_absoluteX="24dp" />
</android.support.constraint.ConstraintLayout>
