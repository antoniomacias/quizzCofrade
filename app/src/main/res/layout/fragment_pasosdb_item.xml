<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#FFFF99">

    <ImageView
        android:id="@+id/marco"
        android:layout_width="84dp"
        android:layout_height="108dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marcodetalle"
        tools:layout_editor_absoluteY="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="68dp"
        android:id="@+id/foto"
        app:srcCompat="@android:drawable/presence_audio_away"
        app:layout_constraintTop_toTopOf="@+id/marco"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/marco"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/marco"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/marco"
        tools:layout_editor_absoluteY="23dp"
        tools:layout_editor_absoluteX="167dp"
        app:layout_constraintVertical_bias="0.526" />

</android.support.constraint.ConstraintLayout>
