    <TextView
        android:id="@+id/escudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Escudos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:onClick="click_escudos"/>

    <TextView
        android:id="@+id/tunicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TÃºnicas"
        android:layout_alignBaseline="@+id/escudos"
        android:layout_alignBottom="@+id/escudos"
        android:layout_alignLeft="@+id/random"
        android:layout_alignStart="@+id/random"
        android:onClick="click_tunicas"/>

    <TextView
        android:id="@+id/pasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Pasos"
        android:layout_alignBaseline="@+id/tunicas"
        android:layout_alignBottom="@+id/tunicas"
        android:layout_toRightOf="@+id/random"
        android:layout_toEndOf="@+id/random"
        android:layout_marginLeft="30dp"
        android:onClick="click_pasos"/>

 <TextView
     android:id="@+id/marchas"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="20dp"
     android:text="Marchas"
     android:layout_marginTop="89dp"
     android:layout_below="@+id/escudos"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:onClick="click_marchas"/>

 <TextView
     android:id="@+id/llamadores"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="20dp"
     android:text="Llamadores"
     android:layout_marginTop="89dp"
     android:layout_below="@+id/escudos"
     android:layout_alignBaseline="@+id/marchas"
     android:layout_alignBottom="@+id/marchas"
     android:layout_marginLeft="30dp"
     android:layout_toRightOf="@+id/marchas"
     android:onClick="click_llamadores"/>

 <TextView
     android:id="@+id/random"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="20dp"
     android:text="Aleatorio"
     android:onClick="click_random"
     android:layout_below="@+id/llamadores"
     android:layout_alignLeft="@+id/llamadores"
     android:layout_alignStart="@+id/llamadores"
     android:layout_marginTop="52dp" />

 <TextView
     android:id="@+id/login"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="20dp"
     android:text="Login"
     android:onClick="click_login"
     android:layout_alignLeft="@+id/random"
     android:layout_alignStart="@+id/random"
     android:layout_marginTop="52dp" />

 <com.loopeer.cardstack.CardStackView
     android:id="@+id/stackview_main"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@android:color/white"
     android:clipToPadding="false"
     android:paddingLeft="12dp"
     android:paddingRight="12dp"
     android:paddingTop="12dp"
     android:layout_below="@+id/random"
     />
 <LinearLayout
     android:id="@+id/button_container"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="right|center_vertical"
     android:layout_marginRight="@dimen/activity_horizontal_margin"
     android:orientation="vertical"
     android:gravity="center">

 </LinearLayout>

</RelativeLayout>
