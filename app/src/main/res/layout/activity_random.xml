<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_random"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ammacias.quizzcofrade.RandomActivity">


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/view_ticktock_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp">
    </FrameLayout>
    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/fotoDetalle"
        android:layout_above="@+id/respuesta_escudo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />-->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Escribe el nombre de la cofradÃ­a"
        android:ems="16"
        android:id="@+id/respuesta_escudo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/container"/>

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siguiente_escudo"
        android:layout_below="@+id/respuesta_escudo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="next_escudo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/respuesta_escudo"
        android:layout_alignStart="@+id/respuesta_escudo"
        android:id="@+id/vida1" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_toRightOf="@+id/vida1"
        android:id="@+id/vida2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_toRightOf="@+id/vida2"
        android:id="@+id/vida3" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_toRightOf="@+id/vida3"
        android:id="@+id/vida4" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_toRightOf="@+id/vida4"
        android:id="@+id/vida5" />

    <com.bcgdv.asia.lib.ticktock.TickTockView
        android:id="@+id/view_ticktock_countdown"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:tickTextSize="20dp"
        android:layout_alignTop="@+id/vida5"
        android:layout_alignParentRight="true"
        app:tickAutoFitText="true"
        app:tickMiddleColor="#333333"
        app:tickMoveCounterClockwise="true"
        app:tickTextColor="#FFF"
        app:tickDotRadius="6dp"
        app:tickEmptyRingColor="@android:color/white"
        app:tickFillRingColor="@color/colorPrimary"
        app:tickRingThickness="3dp"
        app:tickCircleDuration="total_time"/>

    <ImageView
        android:id="@+id/aciertosImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/twitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/numAciertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:layout_alignLeft="@id/aciertosImg"
        android:layout_alignTop="@id/aciertosImg"
        android:layout_alignRight="@id/aciertosImg"
        android:layout_alignBottom="@id/aciertosImg"
        android:gravity="center"
        />


</RelativeLayout>
